# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/millioncxo-dashboard?retryWrites=true&w=majority

# JWT Secret for authentication
# Generate a secure random string for production
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Password Encryption Key (for admin password viewing)
# Generate a secure 32-byte hex key: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# WARNING: Changing this key will make all encrypted passwords unreadable!
# Must be exactly 64 hex characters (32 bytes)
PASSWORD_ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Optional: Node environment
NODE_ENV=development

# Public App URL (for metadata, Open Graph, etc.)
# Set this to your production URL when deploying
# Example: https://dashboard.millioncxo.com
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Resend API Key for email sending
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Resend from email address
# For testing: use onboarding@resend.dev (no verification needed)
# For production: use your verified domain e.g., updates@millioncxo.com
RESEND_FROM_EMAIL=onboarding@resend.dev

